page{
    height: 100%;
    width: 100%;
}

.container{
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.1); 
}

.line{
  height: 1px;
  width: 660rpx;
  background: #e8e8e8;
  margin: 20rpx 0px;
  justify-content:flex-end;
}

.address-list{
    margin-bottom: 90rpx;
    width: 100%;
    font-size:29rpx;
    font-family: -apple-system-font, "Helvetica Neue", sans-serif;
}
.address-list .item{
  padding: 10rpx 0;
  background: #fff 0 0 repeat-x;
  margin-top: 10rpx;
}


.address-list .l{
    margin: 10rpx 20rpx 0 20rpx;
    height: auto;
    display: flex;
    justify-content: space-between;
}

.address-list .l image{
    height: 40rpx;
    width: 40rpx;
}

.address-list .l .handle{
    display: flex;
}

.address-list .name{

        text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.address-list .default{
    width: 62.5rpx;
    height: 33rpx;
    line-height: 28rpx;
    text-align: center;
    font-size: 20rpx;
    color: #b4282d;
    border: 1rpx solid #b4282d;
    visibility: visible;
}


.address-list .line{
    height: 1rpx;
    border-bottom-color: #e8e8e8;
    width: 100%;
}

.address-list .mobile{

}

.address-list .address{
}

.address-list .r{
    width: 52rpx;
    height: auto;
    overflow: hidden;
    margin-right: 16.5rpx;
    margin-bottom:80rpx;
}

.address-list .del{
    display: block;
    width: 15rpx;
    height: 15rpx;
}

.add-address{
    background-color: #FFFFFF;
    display: block;
    margin: 0px;
    width: 100%;
    bottom: 40rpx;
    position: fixed;
}

.add-address button{
  font-size: 32rpx;
  border-radius: 0px;
  color: #FFFFFF;
  background-color: #000000;
  width: 100%;
  height: 76rpx;
}

.handle-edit{
    margin: 0 auto;
    display: block;
    width: 80rpx;
    height: 40rpx;
    padding-left: 50rpx;
    line-height: 40rpx;
    background: url(http://static.lizzmall.com/image/edit.png)  no-repeat;
    background-size: 38rpx;
    font-size: 28rpx;
}

.handle-delete{
    margin: 0 auto;
    display: block;
    width: 80rpx;
    height: 40rpx;
    padding-left: 50rpx;
    line-height: 40rpx;
    background: url(http://static.lizzmall.com/image/delete.png)  no-repeat;
    background-size: 38rpx;
    font-size: 28rpx;
}

.default-input{
    margin: 0 auto;
    display: block;
    width: 240rpx;
    height: 40rpx;
    padding-left: 50rpx;
    line-height: 40rpx;
    background: url(http://static.lizzmall.com/image/checkbox.png) 1rpx -448rpx no-repeat;
    background-size: 38rpx 486rpx;
    font-size: 28rpx;
}

.default-input.selected{
    background: url(http://static.lizzmall.com/image/checkbox.png) 0 -192rpx no-repeat;
    background-size: 38rpx 486rpx;
}

.empty-view{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-view .icon{
  height: 248rpx;
  width: 258rpx;
  margin-bottom: 10rpx;
}

.empty-view .text{
  width: auto;
  font-size: 28rpx;
  line-height: 35rpx;
  color: #999;
}