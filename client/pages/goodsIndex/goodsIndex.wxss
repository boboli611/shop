.banner{
  margin-top: 20rpx;
}
.banner image {
  display: block;
}
.banner .txt{
  color: #999;
  font-size: 28rpx;
  text-align: center;
  margin-top: 10rpx;
}

.goods {
  display: flex;
  margin: 0rpx;
  width: 100%;
  margin-top:60rpx; 
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:space-between;
}

.goods .text{
  text-align: center;
  font-size: 24rpx;
  font-weight: 700;
}

.goods .one{
  margin: 0 40rpx 0 40rpx;
}

.goods .one image{
  width: 670rpx;
}

.goods .two {
  margin-top: 20rpx;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
  font-size: 34rpx;
}

.goods .product{
  margin-right: 30rpx;
}

.goods .two image{
  width: 360rpx;
}

.goods .three{
  margin-top: 20rpx;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
  font-size: 34rpx;
  flex-direction: row;
}

.goods .three view{
  display: block;
}

.goods .three image{
  width: 240rpx;
}